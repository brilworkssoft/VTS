<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	
	<package name="login" namespace="/login" extends="struts-default">
		
		<action name="loginpage" class="org.arcosapt.user.login.Login" method="login">
			
			<result name="success">/WEB-INF/jsp/dashboard/dashboard.jsp</result>
			
			<result name="fail">/WEB-INF/jsp/user/login/login.jsp</result>
			
			<result name="error">/WEB-INF/jsp/error/error.jsp</result>
		</action>
		
	</package>

</struts>